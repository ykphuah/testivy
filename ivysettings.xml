<ivysettings>
    <settings defaultResolver="chain"/>
    <resolvers>
        <chain name="chain">
            <ibiblio name="central" m2compatible="true"/>
            <ibiblio name="jboss-3rd-party-releases" m2compatible="true" root="https://repository.jboss.org/nexus/content/repositories/thirdparty-releases/"/>
            <ibiblio name="springsource-release" m2compatible="true" root="http://repository.springsource.com/maven/bundles/release"/>
            <ibiblio name="springsource-external" root="http://repository.springsource.com/maven/bundles/external" m2compatible="true" />            
        </chain>
    </resolvers>
</ivysettings>
